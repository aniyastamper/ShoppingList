<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingList.Views.NewAccountPage" Title="Create New Account">
    <ContentPage.Content>
        
        <StackLayout Padding="20,20">
            <Label Text="Account Info" FontSize="Large"/>
            <Border Stroke="Blue" StrokeThickness="1" Margin="15,15,0,15">
                <Entry x:Name= "txtUser" Placeholder="Enter Username" />
            </Border>
            
            <Border Stroke="Blue" StrokeThickness="1" Margin="15,0,0,25">
                <Entry x:Name= "txtPassword1" Placeholder="Enter Password" IsPassword="True"/>
            </Border>
            
            <Border Stroke="Blue" StrokeThickness="1" Margin="15,0,0,25">
                <Entry x:Name= "txtPassword2" Placeholder="Re-Enter Password" IsPassword="True"/>
            </Border>
            
            <Border Stroke="Blue" StrokeThickness="1" Margin="15,0,0,25">
                <Entry x:Name= "txtEmail" Placeholder="Enter Email Address" IsPassword="True"/>
            </Border>
            
            <Button Text="Create Account"  Margin="0,60" FontSize="Large" BackgroundColor="Blue" FontAttributes="Bold" TextColor="White" Clicked="CreateAccount_OnClicked"/>
            
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>