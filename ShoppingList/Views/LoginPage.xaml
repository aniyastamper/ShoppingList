<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingList.Views.LoginPage" Title="Member Login Page">
    <ContentPage.Content>
        <StackLayout Padding="20,20">
            <Label Text="Login Info" FontSize="Large"/>
            <Border Stroke="Blue" StrokeThickness="1" Margin="15,15,0,15">
                <Entry x:Name= "txtUser" Placeholder="Enter Username" />
            </Border>
            
            <Border Stroke="Blue" StrokeThickness="1" Margin="15,0,0,25">
                <Entry x:Name= "txtPassword" Placeholder="Enter Password" IsPassword="True"/>
            </Border>
            
            <Button Text="Login" Clicked="Login_OnClicked" Margin="0,60" FontSize="Large" BackgroundColor="Blue" FontAttributes="Bold" TextColor="White"/>
            <Button Text="Create Account"  Clicked="CreateAccount_OnClicked" FontSize="Large" BackgroundColor="Green" FontAttributes="Bold" TextColor="White"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>